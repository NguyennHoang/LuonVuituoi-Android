<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    android:background="@drawable/ic_bg_login"
    android:focusableInTouchMode="true"
    android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verification Code"
                android:textStyle="bold"
                android:textSize="44sp"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please type the verification code sent to prelookstudio@gmail.com"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                >

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/textInputLayout3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_custom"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxLength="1">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/textInputLayout4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="10dp">

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_custom"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxLength="1">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/textInputLayout5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_custom"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxLength="1">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/textInputLayout2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_custom"
                        android:inputType="number"
                        android:maxLength="1"
                        android:layout_gravity="center">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I don't recevie a code!"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Please resend"
                    android:textColor="@color/orange"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    >

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>